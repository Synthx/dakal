{
    "name": "dakal-login",
    "type": "module",
    "main": "./src/index.ts",
    "scripts": {
        "start": "bun run src/index.ts",
        "format": "bunx prettier . --write",
        "lint": "bunx prettier . --check && bunx eslint .",
        "test": "bun test",
        "build": "bun build src/index.ts --target bun --outdir dist",
        "db:prepare": "bunx --bun drizzle-kit generate",
        "db:migrate": "bunx --bun drizzle-kit migrate"
    },
    "dependencies": {
        "dakal-core": "workspace:*",
        "drizzle-orm": "^0.45.1",
        "pg": "^8.18.0"
    },
    "devDependencies": {
        "@types/pg": "^8.16.0",
        "drizzle-kit": "^0.31.9"
    }
}
